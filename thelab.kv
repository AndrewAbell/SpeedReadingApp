<GridLayoutExample@GridLayout>
    #rows:
    cols: 3
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"

    BoxLayoutExample:

    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"



<AnchorLayoutExample>
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, .5
        # size: "40dp", "80dp"
        # size_hint: .5, None
        # width: "100dp"
        # height: "60dp"
        # x, center_x, right (only pick one of 3)
        # y, center_y, top (only pick one of 3)
        pos_hint: {"top":1}

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
            
    Label:
        text: "C"
    
    


<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
